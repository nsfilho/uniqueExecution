{
    "name": "@nsfilho/unique",
    "main": "build/index.js",
    "type": "build/index.d.ts",
    "license": "GPL-3.0",
    "private": false,
    "dependencies": {
        "moment": "^2.27.0",
        "nanoid": "^3.1.12"
    },
    "author": {
        "name": "Nelio Souza Santos Filho",
        "email": "nsfilho@icloud.com"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nsfilho/uniqueExecution"
    },
    "homepage": "https://nsfilho.github.io/uniqueExecution/index.html",
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@types/jest": "^26.0.10",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "commitizen": "^4.2.1",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^7.7.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-import-resolver-typescript": "^2.2.1",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "gh-pages": "^3.1.0",
        "husky": "^4.2.5",
        "jest": "^26.4.2",
        "lint-staged": "^10.2.13",
        "prettier": "^2.1.1",
        "standard-version": "^9.0.0",
        "ts-jest": "^26.3.0",
        "typedoc": "^0.19.0",
        "typescript": "^4.0.2"
    },
    "scripts": {
        "eslint": "eslint --ext \".js,.jsx,.ts,.tsx\" ./src/",
        "format": "prettier --write src/**/*.{ts,tsx,css,js,jsx} package.json",
        "build": "tsc",
        "docs": "typedoc",
        "prepages": "yarn docs",
        "pages": "gh-pages -d docs",
        "test": "jest --detectOpenHandles",
        "jest": "yarn test",
        "release": "standard-version"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn docs && yarn build && lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.+(css|less|scss|md)": [
            "prettier --write"
        ],
        "src/**/*.+(js|jsx|ts|tsx)": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "version": "0.1.4",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
